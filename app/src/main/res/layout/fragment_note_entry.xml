<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray_background">

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saisie des Notes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquez sur un étudiant pour saisir sa note"
        android:textSize="14sp"
        android:textColor="@color/gray_medium"
        android:layout_marginBottom="8dp" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Règle importante :"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/orange_accent"
            android:layout_marginBottom="8dp" />
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pas de modification après la création d'une évaluation : Pour simplifier le projet, une fois une évaluation créée, on ne peut plus la modifier (ni son nom, ni son maximum de points, ni ses sous-évaluations). On peut cependant ajouter des notes, les modifier ou les supprimer."
            android:textSize="12sp"
            android:textColor="@color/gray_medium"
            android:lineSpacingExtra="2dp" />
            
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_student_grades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>