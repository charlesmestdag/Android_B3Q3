<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/evaluation_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_evaluation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de l'évaluation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_evaluation_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/20 pts"
                android:textSize="12sp"
                android:textColor="@color/gray_medium" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_add_sub_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sous-Éval"
            android:textSize="10sp"
            android:layout_marginEnd="8dp"
            style="@style/CustomButton.Secondary" />

        <Button
            android:id="@+id/btn_see_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textSize="10sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            style="@style/CustomButton" />

    </LinearLayout>

</LinearLayout>
